<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
    <title>OUT.rs User Management</title>
  </head>
  <body>
  <div id="content">
    <form action=<%= "/users/#{@user.id}/edit" %> method="post" accept-charset="utf-8">
      <table>
        <tr>
          <td aliign="right">
            <label for="firstname">First Name</label>
          </td>
          <td>
            <input id="firstname" name="user[firstname]" type="text" value=<%= "#{@user.firstname}" %> />
          </td>
        </tr>
        <tr>
          <td aliign="right">
            <label for="lastname">Last Name</label>
          </td>
          <td>
            <input id="lastname" name="user[lastname]" type="text" value=<%= "#{@user.lastname}" %> />
          </td>
        </tr>
        <tr>
          <td>
            <label for="email">e-mail</label>
          </td>
          <td>
            <input id="email" name="user[email]" type="text" value=<%= "#{@user.email}" %> />
          </td>
        </tr>
        <tr>
          <td align="left"></td>
          <td align="right">
            <input type="submit" value="Continue &rarr;"/>
          </td>
        </tr>
      </table>
    </form>
  </div>
  </body>
</html>
