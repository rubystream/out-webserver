  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
    <title>OUT.rs User Management</title>
  </head>
  <body>
    <div id="content">
      <form action="/users/" method="post" accept-charset="utf-8">
        <table>
          <tr>
            <td align="right"><label for="firstname">First Name</label></td>
            <td><input id="firstname" name="user[firstname]" type="text" /></td>
          </tr>
          <tr>
            <td align="right"><label for="lastname">Last Name</label></td>
            <td><input id="lastname" name="user[lastname]" type="text" /></td>
          </tr>
          <tr>
            <td align="right"><label for="email">e-mail</label></td>
            <td><input id="email" name="user[email]" type="text" /></td>
          </tr>
          <tr>
            <td></td>
            <td align="right"><input type="submit" value="Continue &rarr;"/></td>
          </tr>
        </table>
      </form>
    </div>
  </body>
